<!--pages/career/career.wxml-->
<view wx:if="{{isDone}}">
<view class='box2'>
<view class='title'>
  <text>{{work}}</text>
</view>
</view>
<view class='box'>
    <text class='titles'>工作职责</text>
  <view class='content'>
    <text>1.{{responsibilities[0]}}
    </text>
    <text>2.{{responsibilities[1]}}
    </text>
    <text>3.{{responsibilities[2]}}
    </text>
    <text>4.{{responsibilities[3]}}
    </text>
    <text>5.{{responsibilities[4]}}
    </text>
  </view>
</view>

<view class='box'>
    <text class='titles'>职位要求</text>
  <view class='content'>
    <text>1.{{requirements[0]}}\n</text>
    <text>2.{{requirements[1]}}\n</text>
    <text>3.{{requirements[2]}}\n</text>
    <text>4.{{requirements[3]}}\n</text>
    <text>5.{{requirements[4]}}</text>
  </view>
</view>
</view>
  <view class="container" wx:if="{{!isDone}}">
    <text class="style" >您还没有进行测试\n若您已经测试，请到【个人】选择职业</text>
  <button class="button-blue" hover-class='button-white' bindtap="goToTest">进入测试</button>
  </view>
